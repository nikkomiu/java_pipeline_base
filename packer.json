{
  "variables": {
    "docker_image": "java_pipeline/base"
  },
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:14.04",
      "commit": "true"
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "command": "rm -rf cookbooks && berks vendor cookbooks"
    },
    {
      "type": "shell",
      "inline": "apt-get update && apt-get install curl -y"
    },
    {
      "type": "chef-solo",
      "prevent_sudo": true,
      "cookbook_paths": ["cookbooks"]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `docker_image`}}",
        "tag": "1.0"
      },
      "docker-push"
    ]
  ]
}
